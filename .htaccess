<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # Admin sayfalarına doğrudan erişim
    RewriteCond %{REQUEST_URI} ^/admin/
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^admin/([^.]+)$ /admin/$1.html [L]
    
    # API isteklerine izin ver
    RewriteRule ^api/ - [L]
    
    # Post detay sayfası için yönlendirme
    RewriteRule ^post/([^/]+)/?$ post.html [L]
    
    # Apache yönlendirmelerini ayarla
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.php [L]
    
    # Diğer sayfalar için ana sayfaya yönlendir
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.html [L]
</IfModule>

# PHP hata raporlamayı etkinleştir
php_flag display_errors on
php_value error_reporting E_ALL