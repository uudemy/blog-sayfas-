{
    "name": "blog/blog-projesi",
    "description": "Ki≈üisel Blog Projesi",
    "type": "project",
    "require": {
        "php": "^8.1",
        "vlucas/phpdotenv": "^5.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "config/database.php"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "platform": {
            "php": "8.1"
        }
    },
    "scripts": {
        "vercel-build": [
            "composer install --no-dev --no-scripts",
            "composer dump-autoload -o"
        ]
    }
}
