{
    "name": "blog/blog-projesi",
    "description": "Blog projesi için PHP bağımlılıkları",
    "type": "project",
    "require": {
        "php": "^8.2",
        "ext-pdo": "*",
        "ext-pgsql": "*",
        "vlucas/phpdotenv": "^5.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "models/",
            "Config\\": "config/"
        },
        "files": [
            "config/database.php"
        ]
    },
    "scripts": {
        "vercel-build": [
            "composer install --no-dev --no-scripts",
            "npm install",
            "npm run build"
        ]
    }
}
